@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>;
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
    var content = (ContentModels.InfoCard)Model.Content;
}

<div class=" flex flex-col gap-4">
    <h3 class="text-primary text-[1.375rem] font-semibold">@content.InfoTitle</h3>
    <div>
        <img class="" src="@(content.InfoImage?.Url() ?? "~/images/Risk-Management.svg")" alt="" />
    </div>
    <p class="text-body-text text-sm leading-relaxed">@content.InfoText</p>
</div>