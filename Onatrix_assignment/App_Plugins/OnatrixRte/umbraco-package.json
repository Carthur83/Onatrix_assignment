{
  "name": "Onatrix Rte",
  "alias": "Onatrix.Rte",
  "extensions": [
    {
      "type": "tiptapToolbarExtension",
      "kind": "styleMenu",
      "alias": "Onatrix.Tiptap.StyleMenu",
      "name": "Onatrix Tiptap Style Menu",
      "meta": {
        "alias": "onatrixStyleMenu",
        "icon": "icon-palette",
        "label": "Onatrix styles"
      },
      "items": [
        {
          "label": "Paragraphs",
          "items": [
            {
              "label": "M - 20",
              "items": [
                {
                  "label": "Bold",
                  "data": {
                    "tag": "p",
                    "class": "text-rte-md font-bold"
                  },
                  "appearance": {}
                }
              ]
            },
            {
              "label": "L - 40",
              "items": [
                {
                  "label": "Bold",
                  "data": {
                    "tag": "p",
                    "class": "text-rte-lg font-bold"
                  },
                  "appearance": {}
                }
              ]
            },
            {
              "label": "Spacing",
              "items": [
                {
                  "label": "Small space",
                  "data": {
                    "tag": "p",
                    "class": "mb-4"
                  },
                  "appearance": { "style": "margin-bottom:0.5rem;" }
                },
                {
                  "label": "Large space",
                  "data": {
                    "tag": "p",
                    "class": "mb-8"
                  },
                  "appearance": { "style": "margin-bottom:2rem;" }
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "type": "tiptapToolbarExtension",
      "kind": "styleMenu",
      "alias": "Onatrix.Tiptap.BrandColors",
      "name": "Onatrix Brand Colors",
      "meta": {
        "alias": "OnatrixBrandColors",
        "label": "Onatrix Colors"
      },
      "items": [
        {
          "label": "Primary",
          "data": {
            "tag": "span",
            "class": "text-primary"
          },
          "appearance": { "style": "background-color:#4F5955; color:#fff; padding:5px;" }
        },
        {
          "label": "Secondary",
          "data": {
            "tag": "span",
            "class": "text-secondary"
          },
          "appearance": { "style": "background-color:#D9C3A9; color:#fff; padding:5px;" }
        }
      ]
    }
  ]
}
